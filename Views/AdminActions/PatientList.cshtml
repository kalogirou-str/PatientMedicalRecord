@model List<PatientListViewModel>

<h2>Patient List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Patient ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Medical Record Number</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Username</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.PatientID</td>
                <td>@patient.FirstName</td>
                <td>@patient.LastName</td>
                <td>@patient.MedicalRecordNumber</td>
                <td>@patient.DateOfBirth.ToShortDateString()</td>
                <td>@patient.Gender</td>
                <td>@patient.Username</td>
                <td>@patient.Email</td>
                <td>@patient.Phone</td>
                <td>@patient.Address</td>
                <td>
                    @Html.ActionLink("EditPatient", "EditPatient", new { username = patient.Username })
                    |
                    @Html.ActionLink("Delete", "Delete", new { id = patient.PatientID })
                </td>
            </tr>
        }
    </tbody>
</table>
