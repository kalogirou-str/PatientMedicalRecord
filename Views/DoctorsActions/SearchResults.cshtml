@model List<SearchResultViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Search Results</title>
</head>
<body>
    <div class="content">
        <h2>Search Results</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Medical Record Number</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <!-- Add more patient details -->
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model)
                {
                    <tr>
                        <td>@result.MedicalRecordNumber</td>
                        <td>@result.FirstName</td>
                        <td>@result.LastName</td>
                        <td>@result.DateOfBirth</td>
                        <td>@result.Gender</td>
                        <!-- Display more properties as needed -->
                        <td>
                            <a asp-controller="DoctorsActions" asp-action="ViewMedicalRecord" asp-route-patientId="@result.PatientID">View Medical Record</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
