@model MedicalRecordViewModel

@{
    ViewData["Title"] = "Create Medical Record";
}

<!DOCTYPE html>
<html>
<body>
    <h2>Create Medical Record</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="CreateMedicalRecord" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="MedicalRecordNumber">Medical Record Number</label>
            <input asp-for="MedicalRecordNumber" class="form-control" />
            <span asp-validation-for="MedicalRecordNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateOfVisit">Date of Visit</label>
            <input asp-for="DateOfVisit" class="form-control" />
            <span asp-validation-for="DateOfVisit" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Diagnosis">Diagnosis</label>
            <input asp-for="Diagnosis" class="form-control" />
            <span asp-validation-for="Diagnosis" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Treatment">Treatment</label>
            <input asp-for="Treatment" class="form-control" />
            <span asp-validation-for="Treatment" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Prescription">Prescription</label>
            <input asp-for="Prescription" class="form-control" />
            <span asp-validation-for="Prescription" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create Medical Record</button>
    </form>
</body>
</html>
